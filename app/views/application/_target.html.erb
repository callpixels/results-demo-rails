<% if target.callpixels_target_id == 0 %>
    <div id="cp-target-none" class="target" style="display: none;">
      <div class="col-sm-12">
        <%= raw target.description %>
      </div>
    </div>
<% else %>
    <div id="cp-target-<%= target.callpixels_target_id %>" class="target clearfix" style="display: none;">
      <div class="col-sm-2">
        <%= image_tag(target.logo, alt: target.name, title: target.name) %>
      </div>

      <div class="col-sm-10">
        <div class="number text-success" data-plain-number="[plain_number]"><h2>[number]</h2></div>
        <div class="description"><%= raw target.description %></div>
        <div class="hours text-info text-muted"><%= raw target.hours %></div>
      </div>
    </div>
<% end %>